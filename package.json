{
  "name": "gray-matter-workshop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "pnpm run generate-search && pnpm run format && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "pnpm run format:check && pnpm run lint && pnpm run type-check && pnpm run build",
    "spell": "cspell \"src/**/*.{ts,tsx}\" *.md",
    "generate-search": "node scripts/generate-search-data.js",
    "generate-embeddings": "tsx scripts/rag/workshop-indexer.ts --full",
    "generate-embeddings:pilot": "tsx scripts/rag/workshop-indexer.ts --pilot",
    "generate-embeddings:external": "tsx scripts/rag/external-docs-indexer.ts",
    "generate-embeddings:code": "tsx scripts/rag/code-indexer.ts",
    "generate-embeddings:code:pilot": "tsx scripts/rag/code-indexer.ts --pilot",
    "test-retrieval": "tsx scripts/rag/test-retrieval.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "dependencies": {
    "@google/genai": "^1.25.0",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.4",
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "@types/mdx": "^2.0.13",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "convex": "^1.28.0",
    "lucide-react": "^0.541.0",
    "minisearch": "^7.1.2",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "posthog-js": "^1.273.0",
    "posthog-node": "^5.9.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.180.0",
    "cheerio": "^1.1.2",
    "cspell": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
